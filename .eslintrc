{
  "extends": 
  [ 
    "eslint:recommended",
    "google"
  ],
  "plugins":
  [
    "react",
    "@typescript-eslint"
  ],
  "parser": "babel-eslint",
  "env": 
  {
    "browser": true
  },
  "globals":
  {
    "process": "readonly",
    "JSX": "readonly"
  },
  "rules": 
  {   
    "react/jsx-uses-react": "error",   
    "react/jsx-uses-vars": "error",
    "brace-style": "off",
    "@typescript-eslint/brace-style":
    [
      "error",
      "allman",
      { "allowSingleLine": true }
    ],
    "valid-jsdoc": 
    [
      "error",
      { 
        "requireReturnType": false,
        "requireParamType": false 
      }
    ],
    "padded-blocks": "off"
  }
}